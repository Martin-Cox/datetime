{
  "env":           {
    "browser": true,
    "es6":     true,
    "jquery":  true
  },
  "extends":       "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules":         {
    "indent":          [
      "error",
      4,
      {
        "VariableDeclarator": { "var": 1, "let": 1 },
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes":          [
      "error",
      "single"
    ],
    "semi":            [
      "error",
      "always"
    ]
  }
}